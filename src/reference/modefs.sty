% figures
\newcommand{\figurebox}[1]
	{\fbox{\begin{minipage}{\textwidth} #1 \end{minipage}}}
\newcommand{\twofig}[3]
	{\begin{figure*}[t]#3\ \hrulefill\ 
	\caption{\label{#1}#2}\end{figure*}}
\newcommand{\boxfig}[3]
	{\begin{figure*}\figurebox{#3\caption{\label{#1}#2}}\end{figure*}}
\newcommand{\figref}[1]
	{Figure~\ref{#1}}

